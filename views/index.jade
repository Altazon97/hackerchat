extends layout

block content
  h1= title
  p.lead Hello! You are new. You need to tell us your name!
  form(method="post")
    input#namebox(type="text", name="name", placeholder="Name")

  script.
    $('input').keydown(function (e) {
      if (e.keyCode == 13) {
        console.log("Submitting")
        $('form').submit();
    });