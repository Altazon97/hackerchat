extends layout

block content
  h1= title
  p.lead Hello! You are new. You need to tell us your name!
  form(method="post")
    div.panel.panel-default.panel-name
      div.panel-heading hello
        small my name is...
      div.panel-body
        input#namebox(type="text", name="name", placeholder="Name", required="required")
    input.go(type="submit", value="Let's Chat!")

  script.
    $('input').keydown(function (e) {
      if (e.keyCode == 13) {
        console.log("Submitting")
        $('form').submit();
    });